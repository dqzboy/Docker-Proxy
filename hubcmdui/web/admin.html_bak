                    <button type="button" onclick="newDocument()">新建文档</button>
                    <table id="documentTable">
                        <thead>
                            <tr>
                                <th>文章</th>
                                <th>操作</th>
                            </tr>
                        </thead>
                        <tbody id="documentTableBody">
