                    refreshCaptcha();

                    // 清除登录表单中的输入数据
                    document.getElementById('username').value = '';
                    document.getElementById('password').value = '';
                    document.getElementById('captcha').value = '';
                } else {
                    alert('修改密码失败');
                }
            } catch (error) {
                alert('修改密码失败: ' + error.message);
            }
        }

