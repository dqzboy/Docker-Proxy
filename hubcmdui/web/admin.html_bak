                                <th>新标签页打开</th>
                                <th>操作</th>
                            </tr>
                        </thead>
                        <tbody id="menuTableBody">
                            <!-- 菜单项将在这里动态添加 -->
                        </tbody>
                    </table>
                    <button type="button" class="add-btn" onclick="showNewMenuItemRow()">添加菜单项</button>
                </div>
  
                <!-- 文档管理部分 -->
                <div id="documentation-management" class="content-section">
